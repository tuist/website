---
import Blurgradienttop from "../assets/Blurgradienttop.astro";
---

<section aria-labelledby="hero" id="hero " class="relative">
  <Blurgradienttop />
  <section>
    <div
      class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-16 max-w-7xl lg:pb-32 lg:pt-56">
      <div class="max-w-5xl mx-auto">
        <div class="text-left md:text-center">
          <div class="max-w-xl lg:items-end gap-6 lg:gap-12 mx-auto">
            <div>
              <span
                class="text-transparent bg-clip-text font-medium tracking-widest bg-gradient-to-r from-cyan-400 via-teal-500 to-indigo-500 text-xs uppercase"
                >Jobs</span
              ><p class="text-3xl mt-8 font-normal text-white">
                Join us, and help us bring software magic back.
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="max-w-3xl mx-auto mt-24">
        <div class="space-y-24">
          <div>
            <div class="border-b border-white/10 pb-5">
              <h3 class="text-base leading-6 text-white">Engineering</h3>
            </div>

            <div class="divide-y divide-white/10">
              <div class="sm:flex sm:items-center sm:justify-between">
                <h3 class="text-base text-slate-400 py-6">
                  Senior - Staff Fullstack Engineer
                </h3>
                <div class="mt-3 sm:ml-4 sm:mt-0">
                  <a
                    class="hover:text-sky-400 text-white duration-200"
                    href="/job-details">See job post &nbsp; &rarr;</a
                  >
                </div>
              </div>
              <div class="sm:flex sm:items-center sm:justify-between">
                <h3 class="text-base text-slate-400 py-6">
                  Senior - Staff Mobile Engineer (iOS)
                </h3>
