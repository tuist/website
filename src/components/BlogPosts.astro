---
const posts = await Astro.glob("../pages/blog/**/*.mdx");
import authors from "../content/authors.js";
---

<section
  aria-labelledby="faq"
  id="faq-section"
  class="relative border-y border-white/5"
>
  <div class="max-w-7xl px-8 md:px-12 lg:px-32 mx-auto py-32 lg:py-36 relative">
    <div>
      <div class="max-w-xl">
        <div class="w-full">
          <span
            class="text-transparent bg-clip-text font-medium tracking-widest bg-gradient-to-r from-cyan-400 via-cyan-500 to-indigo-500 text-xs uppercase"
            >Blog</span
          >
          <h2 class="text-3xl mt-8 font-normal text-white">Stay updated</h2>
          <div class="max-w-lg mt-3">
            <p class="text-lg text-slate-400">
              Discover engaging stories and expert insights on our blog.
            </p>
          </div>
        </div>
      </div>
      <div class="mt-12 space-y-12 divide--2 divide-white/5">
        {
          posts.map((post) => {
            const isInterview: boolean = post.frontmatter.interview;
            return (
              <div class="grid grid-cols-1 gap-4 pt-4 lg:grid-cols-3 lg:pt-12">
                <div class="flex flex-col flex-shrink-0 mb-6 lg:pr-12 md:mb-0 pl-4 border-l-2 border-white/5">
                  <p class="text-sm text-slate-400">January 10th, 2023</p>
                  {!isInterview &&
                  (
                    <p class="text-sm text-slate-400">
                      Written by: <a class="hover:underline" href={authors[post.frontmatter.author]?.twitter}>{authors[post.frontmatter.author]?.name}</a>

                    </p>
                  )}
                  {isInterview && 
                    <p class="text-sm text-slate-400">
                      Interviewee: <a class="hover:underline" href={`https://twitter.com/${post.frontmatter.interviewee_twitter_handle}`}>{post.frontmatter.interviewee_name}</a>
                    </p>
                  }
                </div>
                <div class="space-y-4 lg:col-span-2">
                  <span class="text-lg text-white">
                    {post.frontmatter.title}
                  </span>
                  <p class="text-sm text-slate-400 mt-8">
                    {post.frontmatter.excerpt}
                  </p>

                  <p class="mt-4">
                    <a
                      href={post.url}
                      class="text-sm leading-6 text-sky-400 hover:text-white"
                    >
                      Read more <span aria-hidden="true">&rarr;</span>
                    </a>
                  </p>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
