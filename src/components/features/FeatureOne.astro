---
import Verticalgrid from "../assets/VerticalGrid.astro";
import Calculator from "../Calculator";
import { useTranslations, getLangFromUrl } from "../../i18n/utils";
const { lang, url } = Astro.props;

const t = useTranslations(lang);
---

<section
  aria-labelledby="Featurefour"
  id="Featurefour"
  class="relative scroll-mt-24"
>
  <Verticalgrid />
  <div class="max-w-7xl px-8 md:px-32 mx-auto py-12 md:py-24 relative">
    <div
      class="flex items-center flex-col-reverse md:flex-row md:space-x-32 md:space-y-0"
    >
      <div class="max-w-xl mt-6 flex flex-col items-center md:items-start">
        <span
          class="text-transparent bg-clip-text font-medium tracking-widest bg-gradient-to-r from-cyan-400 via-cyan-500 to-indigo-500 text-xs uppercase"
          >Tuist Server</span
        >
        <p class="text-3xl mt-8 font-normal text-white">
          {t("cloud.hero.title")}
        </p>
        <p class="max-w-2xl mt-4 text-lg text-slate-400">
          {t("cloud.hero.subtitle")}
        </p>
        <div class="py-10">
          <a
            href="https://docs.tuist.io/documentation/tuist/tuist-cloud-get-started"
            data-featurebase-feedback-portal
            class="px-6 py-3 text-sm text-center text-white hover:to-indigo-400 duration-200 bg-gradient-to-r from-sky-400 to-indigo-500 font-medium hover:bg-white/5 rounded-xl hover:text-white focus:outline-none focus-visible:outline-black focus-visible:ring-black"
          >
            {t('cloud.hero.cta')}
          </a>
        </div>
      </div>
      <img class="mt-20" src="/logos/cloud-logo.png" height="300" width="300" />
    </div>
    <div>
      <ul
        class="grid grid-cols-2 gap-8 mt-6 list-none md:grid-cols-3 lg:gap-12 lg:mt-24"
        role="list"
      >
        <li>
          <div>
            <div
              class="flex items-center justify-center w-12 h-12 text-white shadow-indigo-500/20 bg-gradient-to-tr shadow-2xl from-vulcan-900 to-vulcan-700 rounded-xl"
            >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
            </svg>
            
            </div>
            <p class="mt-5 text-lg font-medium text-white lg:text-xl">
              {t('cloud.features.1.title')}
            </p>
          </div>
          <div class="mt-2 text-base text-slate-400">
            {t('cloud.features.1.description')}
          </div>
        </li>
        <li>
          <div>
            <div
              class="flex items-center justify-center w-12 h-12 text-white shadow-indigo-500/20 bg-gradient-to-tr shadow-2xl from-vulcan-900 to-vulcan-700 rounded-xl"
            >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            
            </div>
            <p class="mt-5 text-lg font-medium text-white lg:text-xl">
              {t('cloud.features.2.title')}
            </p>
          </div>
          <div class="mt-2 text-base text-slate-400">
            {t('cloud.features.2.description')}
          </div>
        </li>
        <li>
          <div>
            <div
              class="flex items-center justify-center w-12 h-12 text-white shadow-indigo-500/20 bg-gradient-to-tr shadow-2xl from-vulcan-900 to-vulcan-700 rounded-xl"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0020.25 18V6A2.25 2.25 0 0018 3.75H6A2.25 2.25 0 003.75 6v12A2.25 2.25 0 006 20.25z"
                ></path>
              </svg>
            </div>
            <p class="mt-5 text-lg font-medium text-white lg:text-xl">
              {t('cloud.features.3.title')}
            </p>
          </div>
          <div class="mt-2 text-base text-slate-400">
            {t('cloud.features.3.description')}
          </div>
        </li>
      </ul>
    </div>
    <div class="flex flex-col gap-y-20 mt-20 lg:grid-cols-8 lg:mt-36">
      <div class="col-span-1 md:col-span-3">
        <h2 class="mt-6 text-3xl font-normal text-white">
          {t('cloud.roi.title')}
        </h2>
        <p class="mt-5 text-lg text-slate-400">
          {t('cloud.roi.descrription')}
        </p>

      </div>
      <section
        class="flex flex-col p-[0.060rem] shadow-2xl rounded-3xl bg-gradient-to-b from-indigo-500 to-cyan-500 col-span-5"
      >
        <div class="bg-vulcan-900 px-6 sm:px-8 pt-8 pb-10 rounded-3xl h-full">
          <Calculator client:visible url={url}/>
        </div>
      </section>
      <!-- <div class="mt-12 lg:mt-0 w-full lg:ml-auto bg-indigo-500 rounded-md p-4">
      </div> -->
    </div>
  </div>
</section>
