---
import { Code } from "astro/components";
import Verticalgrid from "../assets/VerticalGrid.astro";
import { Companies } from "../Companies";
import {useTranslations, getLangFromUrl} from "../../i18n/utils"

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section aria-labelledby="Featuretwo" id="Featuretwo " class="relative">
  <Verticalgrid />
  <div
    class="max-w-7xl px-8 md:px-12 lg:px-32 mx-auto py-12 lg:py-24 relative space-y-24"
  >
    <div
      class="grid grid-cols-1 gap-4 mt-20 lg:mt-6 list-none lg:grid-cols-2 lg:gap-24"
    >
      <div>
        <span
          class="text-transparent bg-clip-text font-medium tracking-widest bg-gradient-to-r from-cyan-400 via-teal-500 to-indigo-500 text-xs uppercase"
          >{t('home.hero.tuist')}
        </span><p class="text-2xl md:text-3xl mt-8 font-normal text-white">
          {t('home.hero.slogan')}
        </p>
        <p class="max-w-2xl mt-4 text-lg text-slate-400">
          {t('home.hero.description')}
        </p>
        <p class="max-w-2xl mt-6 text-sm text-slate-200 font-semibold uppercase">{t('home.hero.proudly_sponsored')}</p>
        <Companies client:visible />

        <div
          class="flex flex-col gap-3 sm:flex-row lg:items-center justify-start lg:justify-start mt-12"
        >
          <div class="flex flex-col sm:space-x-2 sm:flex-row justify-center align-center">
            <a
              class="flex-0 inline-flex items-center justify-center px-6 py-4 text-center text-white hover:to-indigo-400 duration-200 bg-gradient-to-r from-sky-400 to-indigo-500 font-medium hover:bg-white/5 rounded-xl hover:text-white focus:outline-none focus-visible:outline-black focus-visible:ring-black"
              href="https://docs.tuist.io/guide/introduction/installation"
              >{t('home.hero.get_started')}
            </a>
          </div>
          <!-- <div class="flex flex-col sm:flex-row">
            <a
              class="inline-flex items-center justify-center px-6 py-3 font-normal text-white bg-white/5 rounded-xl group focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 hover:bg-transparent duration-200 border-2 border-white/10 active:bg-cyan-50 active:text-white focus-visible:outline-cyan-50 hover:border-white hover:text-white"
              href="https://lexingtonthemes.lemonsqueezy.com/checkout/buy/cad98266-24b3-47fd-99a6-e65ad9af37f6"
              >Users &nbsp; &nbsp; &rarr;
            </a>
          </div> -->
        </div>
      </div>
      <div class="lg:mt-0 mt-12 h-full">
        <div
          x-data
          x-tabs
          class="w-full lg:border border-white/10 lg:rounded-3xl lg:p-10"
        >
          <div x-tabs:list class="-mb-px flex items-stretch gap-3">
            <button
              x-tabs:tab
              type="button"
              :class="$tab.isSelected ? ' border-b border-cyan-500 focus:border-cyan-500' : 'bg-transparent'"
              class="inline-flex text-white font-semibold py-2 text-xs"
              >Project.swift</button
            >
            <button
              x-tabs:tab
              type="button"
              :class="$tab.isSelected ? ' border-b border-cyan-500 focus:border-cyan-500' : 'bg-transparent'"
              class="inline-flex text-white font-semibold3 py-2 text-xs"
              >Workspace.swift
            </button>
          </div>
          <div x-tabs:panels class="mt-6">
            <section
              x-tabs:panel
              class="text-xs font-mono shadow-3xl mt-4 rounded-2xl overflowhidden p-4 bg-[#1c1e28] h-full"
            >
              <Code
                code={`
import ProjectDescription

let project = Project(
    name: "Tuist",
    targets: [
        Target(
            name: "Tuist",
            platform: .iOS,
            product: .app,
            bundleId: "io.tuist.Tuist",
            sources: ["Sources/**"]
        ),
        Target(
            name: "TuistTests",
            platform: .iOS,
            product: .unitTests,
            bundleId: "io.tuist.TuistTests",
            sources: ["Tests/**"],
            dependencies: [.target(name: "Tuist")]
        )
    ]
)
`}
                lang="swift"
                theme="css-variables"
              />
            </section>
            <section
              x-tabs:panel
              class="text-xs font-mono mt-4 rounded-3xl hadow-2xl overflowhidden p-4 bg-[#1c1e28] h-full"
            >
              <Code
                code={`
import ProjectDescription

let workspace = Workspace(
    name: "TuistWorkspace",
    projects: [
        "Projects/**",
    ]
)`}
                lang="swift"
                theme="css-variables"
              />
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
