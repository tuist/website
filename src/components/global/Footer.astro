---
import Blurgradientleft from "../assets/Blurgradientleft.astro";
---

<footer
  aria-labelledby="footer"
  id="footer "
  class="bg-vulcan-900 relative border-t border-white/5"
>
  <Blurgradientleft />
  <div class="max-w-7xl px-8 md:px-12 lg:px-32 mx-auto py-12 lg:py-24 relative">
    <div class="space-y-10 xl:space-y-0 xl:grid xl:grid-cols-4 xl:gap-8">
      <div class="text-white">
        <div class="inline-flex items-center gap-3">
          <img src="/logos/logo.png" class="w-12 h-12"/>
          <p class="text-2xl font-bold">Tuist</p>
        </div>
        <p class="mt-2 text-sm text-slate-400">
          <span class="mt-6 text-sm font-normal text-slate-400">
            Â© 2023 Tuist. <br /> All rights reserved
          </span>
        </p>
        <a
          href="https://cal.com/team/tuist/cloud?utm_source=banner&utm_campaign=oss"
          target="_blank"
          ><img
            class="mt-6"
            alt="Book us with Cal.com"
            src="https://cal.com/book-with-cal-light.svg"
          /></a
        >
      </div>
      <div class="grid grid-cols-2 gap-8 xl:col-span-3">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-white">Learn</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  class="text-sm text-slate-400 inline-flex items-center"
                  href="https://docs.tuist.io/documentation/tuist"
                  >Documentation</a
                >
              </li>
              <li>
                <a
                  href="https://tuist.github.io/tuist/main/documentation/projectdescription"
                  class="text-sm text-slate-400"
                >
                  Reference
                </a>
              </li>

              <li>
                <a
                  href="https://chat.openai.com/g/g-z9dLWHPID-xcodegpt"
                  class="text-sm text-slate-400"
                >
                  XcodeGPT
                </a>
              </li>

              <li>
                <a
                  href="https://chat.openai.com/g/g-06dgAxNvw-tuistgpt"
                  class="text-sm text-slate-400"
                >
                  TuistGPT
                </a>
              </li>
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-white">Open Source</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  href="https://github.com/tuist/tuist"
                  class="text-sm text-slate-400"
                >
                  Tuist
                </a>
              </li>
              <li>
                <a
                  href="https://github.com/tuist/XcodeProj"
                  class="text-sm text-slate-400"
