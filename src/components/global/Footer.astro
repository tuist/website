---
import Blurgradientleft from "../assets/Blurgradientleft.astro";
import {useTranslations, getLangFromUrl, useTranslatedPath} from "../../i18n/utils"
const { lang } = Astro.props;
const t = useTranslations(lang);
const translatedPath = useTranslatedPath(lang);
---

<footer
  aria-labelledby="footer"
  id="footer "
  class="bg-vulcan-900 relative border-t border-white/5"
>
  <Blurgradientleft />
  <div class="max-w-7xl px-8 md:px-12 lg:px-32 mx-auto py-12 lg:py-24 relative">
    <div class="space-y-10 xl:space-y-0 xl:grid xl:grid-cols-4 xl:gap-8">
      <div class="text-white">
        <div class="inline-flex items-center gap-3">
          <img src="/logos/logo.png" class="w-12 h-12"/>
          <p class="text-2xl font-bold">Tuist</p>
        </div>
        <p class="mt-2 text-sm text-slate-400">
          <span class="mt-6 text-sm font-normal text-slate-400">
            Â© 2023 Tuist. <br /> {t('footer.rights_reserved')}
          </span>
        </p>
        <a
          href="hhttps://cal.com/team/tuist/tuist"
          target="_blank"
          ><img
            class="mt-6"
            alt="Book us with Cal.com"
            src="https://cal.com/book-with-cal-light.svg"
          /></a
        >
      </div>
      <div class="grid grid-cols-2 gap-8 xl:col-span-3">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-white">{t('footer.learn')}</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  class="text-sm text-slate-400 inline-flex items-center"
                  href="https://docs.tuist.io"
                  >{t('footer.learn.documentation')}</a
                >
              </li>
              <li>
                <a
                  href="https://docs.tuist.io/reference/project-description/project"
                  class="text-sm text-slate-400"
                >
                  {t('footer.learn.reference')}
                </a>
              </li>
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-white">{t('footer.server')}</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  href="https://status.tuist.io"
                  class="text-sm text-slate-400"
                >
                  {t('footer.server.status')}
                </a>
              </li>
              <li>
                <a
                  href={translatedPath("/terms")}
                  class="text-sm text-slate-400"
                >
                  {t("footer.server.terms")}
                </a>
              </li>
              <li>
                <a
                  href={translatedPath("/privacy")}
                  class="text-sm text-slate-400"
                >
                  {t('footer.server.privacy')}
                </a>
              </li>
              <li>
                <a
                  href={translatedPath("/cookies")}
                  class="text-sm text-slate-400"
                >
                  {t('footer.server.cookie')}
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-white">{t('footer.community')}</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  href="https://slack.tuist.io"
                  class="text-sm text-slate-400"
                >
                  Slack
                </a>
              </li>
              <li>
                <a
                  href="https://github.com/tuist/tuist/discussions"
                  class="text-sm text-slate-400"
                >
                  {t('footer.community.discussions')}
                </a>
              </li>
              <li>
                <a
                  href="https://t.me/tuist"
                  class="text-sm text-slate-400"
                >
                  Telegram
                </a>
              </li>
              <li>
                <a
                  href="https://twitter.com/tuistio"
                  class="text-sm text-slate-400"
                >
                  Twitter
                </a>
              </li>
              <li>
                <a
                  href="https://mastodon.social/@tuist@fosstodon.org"
                  class="text-sm text-slate-400"
                >
                  Mastodon
                </a>
              </li>
            </ul>
          </div>
          <div class="mt-12 md:mt-0">
            <h3 class="text-white">Tuist</h3>
            <ul role="list" class="mt-4 space-y-2">
              <li>
                <a
                  href={translatedPath("/about")}
                  class="text-sm text-slate-400"
                >
                  {t('footer.company.about')}
                </a>
              </li>
              <li>
                <a
                  href={translatedPath("/longevity")}
                  class="text-sm text-slate-400"
                >
                  {t('footer.company.longevity_manifesto')}
                </a>
              </li>
              <li>
                <a
                  href="https://lists.tuist.io/subscription/form"
                  class="text-sm text-slate-400"
                >
                  {t('footer.company.newsletter')}
                </a>
              </li>
              <li>
                <a
                  href={"https://handbook.tuist.io"}
                  class="text-sm text-slate-400"
                >
                  {t('footer.company.handbook')}
                </a>
              </li>
              <li>
                <a
                  href={translatedPath("/trademark-guidelines")}
                  class="text-sm text-slate-400"
                >
                  {t('footer.company.trademark_guidelines')}
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
