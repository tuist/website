---
import RoundedGrid from "../assets/RoundedGrid.astro";
---

<section
  aria-labelledby="signin"
  id="signin"
  class="relative overflow-hidden h-screen justify-center items-center">
  <RoundedGrid />
  <div
    class="px-8 relative md:flex-none md:px-28 py-32 sm:justify-center flex items-center justify-center">
    <div class="w-full max-w-md md:max-w-sm md:px-0 mx-auto sm:px-4">
      <div class="flex flex-col text-center">
        <div>
          <p class="text-3xl font-normal text-white">Log in to Navy.</p>
          <div class="py-3">
            <span class="w-full inline-flex relative mt-3 z-0"
              ><button
                class="font-medium text-sm bg-white/0 border border-white/5 focus:border-cyan-300 focus:outline-none focus:ring-1 focus:ring-cyan-300 focus:z-10 hover:bg-white/10 inline-flex items-center justify-center px-4 py-3 relative rounded-xl text-white w-full"
                type="button"
                ><span>Log in with</span>
                <span class="mr-3 order-first"
                  ><svg
                    fill="none"
                    height="24"
                    viewBox="0 0 32 32"
                    width="24"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                      d="M30.0014 16.3109C30.0014 15.1598 29.9061 14.3198 29.6998 13.4487H16.2871V18.6442H24.1601C24.0014 19.9354 23.1442 21.8798 21.2394 23.1864L21.2127 23.3604L25.4536 26.58L25.7474 26.6087C28.4458 24.1665 30.0014 20.5731 30.0014 16.3109Z"
                      fill="#4285F4"></path><path
                      d="M16.2862 30C20.1433 30 23.3814 28.7555 25.7465 26.6089L21.2386 23.1865C20.0322 24.011 18.4132 24.5866 16.2862 24.5866C12.5085 24.5866 9.30219 22.1444 8.15923 18.7688L7.9917 18.7827L3.58202 22.1272L3.52435 22.2843C5.87353 26.8577 10.6989 30 16.2862 30Z"
                      fill="#34A853"></path><path
                      d="M8.16007 18.7688C7.85848 17.8977 7.68395 16.9643 7.68395 15.9999C7.68395 15.0354 7.85849 14.1021 8.1442 13.231L8.13621 13.0455L3.67126 9.64734L3.52518 9.71544C2.55696 11.6132 2.0014 13.7444 2.0014 15.9999C2.0014 18.2555 2.55696 20.3865 3.52518 22.2843L8.16007 18.7688Z"
                      fill="#FBBC05"></path><path
                      d="M16.2863 7.4133C18.9688 7.4133 20.7783 8.54885 21.8101 9.4978L25.8418 5.64C23.3657 3.38445 20.1434 2 16.2863 2C10.699 2 5.87354 5.1422 3.52435 9.71549L8.14339 13.2311C9.30223 9.85555 12.5086 7.4133 16.2863 7.4133Z"
                      fill="#EB4335"></path>
                  </svg>
                </span>
              </button>
            </span>
            <div class="py-3 relative">
              <div
                class="flex items-center absolute inset-0"
                aria-hidden="true">
                <div class="w-full border-t border-white/5"></div>
              </div><div class="flex relative justify-center">
                <span class="text-sm bg-vulcan-900 px-2 text-white"
                  >Or continue with</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
      <form action="https://submit-form.com/r4PIGvAB">
        <input name="hidden" autocomplete="false" style="display:none" />
        <input name="_redirect" type="hidden" value="#" />
        <div class="space-y-3">
          <div class="">
            <label
              name="name"
              class="block mb-3 text-sm font-medium text-white sr-only">
              First name
            </label>
            <input
              type="text"
              placeholder="Your name"
              class="block w-full px-4 py-3 border bg-transparent border-white/10 rounded-xl appearance-none text-cyan-300 placeholder-white/50 focus:border-cyan-300 focus:bg-transparent focus:outline-none focus:ring-cyan-300 sm:text-sm"
            />
          </div><div class="col-span-full">
            <label
              class="block mb-3 text-sm font-medium text-white sr-only"
              name="company">Password</label
            >
            <input
              class="block w-full px-4 py-3 border bg-transparent border-white/10 rounded-xl appearance-none text-cyan-300 placeholder-white/50 focus:border-cyan-300 focus:bg-transparent focus:outline-none focus:ring-cyan-300 sm:text-sm"
              placeholder="Type password here..."
              type="password"
            />
          </div><div class="flex items-center justify-between">
            <div class="flex items-center">
              <input
                class="text-black focus:ring-white border-cyan-300 h-4 focus:border-white bg-black rounded w-4"
                type="checkbox"
                id="remember-me"
                name="remember-me"
              />
              <label
                class="font-medium text-sm block leading-tight ml-2 text-white"
                for="remember-me">Remember me</label
              >
            </div><div class="text-sm">
              <a class="font-medium hover:text-cyan-300 text-white" href="#"
                >Forgot your password?</a
              >
            </div>
          </div>
          <div class="col-span-full">
            <a
              class="inline-flex items-center justify-center w-full px-6 py-3 text-center text-white hover:to-indigo-400 duration-200 bg-gradient-to-r from-sky-400 to-indigo-500 font-medium rounded-xl hover:text-white focus:outline-none focus-visible:outline-black focus-visible:ring-black"
              href="#"
              >Sign in
            </a>
          </div>
        </div>
        <div class="mt-3">
          <p
            class="font-medium text-sm leading-tight text-white mx-auto text-center">
            Not a have a password? <a
              class="text-cyan-300 hover:text-white ml-3"
              href="/signup">Sign up now</a
            >
          </p>
        </div>
      </form>
    </div>
  </div>
</section>
