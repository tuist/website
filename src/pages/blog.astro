---
import BaseLayout from "../layouts/BaseLayout.astro";
import metadata from '../utils/metadata.json'
import BlogPosts from "../components/BlogPosts.astro";
import { AstroSeo } from "@astrolib/seo";
import { getLangFromUrl } from "../i18n/utils";
const url =  Astro.url;
const lang = getLangFromUrl(url);
---

<AstroSeo
  title="Blog - Tuist"
  description=`Discover engaging stories and expert insights on our blog.`
  canonical={metadata.url}
  openGraph={{
    url: metadata.url,
    title: "Blog",
    description: `Discover engaging stories and expert insights on our blog.`,
    images: [
      {
        url: `${metadata.url}/blog/og-image.jpg`,
        alt: "Tuist logo",
        type: "image/jpg",
        height: 630,
        width: 1200
      },
    ],
    site_name: "Tuist",
  }}
  twitter={{
    handle: "@tuistio",
    site: "@tuistio",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout url={Astro.url}>
  <BlogPosts url={url} lang={lang}/>
</BaseLayout>
