---
import BaseLayout from "../layouts/BaseLayout.astro";

import BlogPosts from "../components/BlogPosts.astro";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Blog - Tuist"
  description=`Discover engaging stories and expert insights on our blog.`
  canonical="https://tuist.io"
  openGraph={{
    url: "https://tuist.io",
    title: "Blog",
    description: `Discover engaging stories and expert insights on our blog.`,
    images: [
      {
        url: "https://tuist.io/images/logo.jpeg",
        alt: "Tuist logo",
        type: "image/jpeg",
      },
    ],
    site_name: "Tuist",
  }}
  twitter={{
    handle: "@tuistio",
    site: "@tuistio",
    cardType: "summary",
  }}
/>
<BaseLayout>
  <BlogPosts />
</BaseLayout>
