---
import BaseLayout from "../layouts/BaseLayout.astro";
import metadata from '../content/metadata.js'
import BlogPosts from "../components/BlogPosts.astro";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Blog - Tuist"
  description=`Discover engaging stories and expert insights on our blog.`
  canonical={metadata.url}
  openGraph={{
    url: metadata.url,
    title: "Blog",
    description: `Discover engaging stories and expert insights on our blog.`,
    images: [
      {
        url: `${metadata.url}/images/logo.jpeg`,
        alt: "Tuist logo",
        type: "image/jpeg",
      },
    ],
    site_name: "Tuist",
  }}
  twitter={{
    handle: "@tuistio",
    site: "@tuistio",
    cardType: "summary",
  }}
/>
<BaseLayout>
  <BlogPosts />
</BaseLayout>
